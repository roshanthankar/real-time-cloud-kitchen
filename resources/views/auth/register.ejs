<section class="login flex justify-center pt-24">
    <!-- component -->
<div class="flex flex-col items-center justify-center w-screen h-screen text-gray-700">
	<form action="/register" method="POST" class="flex flex-col bg-white rounded shadow-lg p-12 " action="">
		<% if(messages.error) { %>
		<span class="text-red-500 text-sm"><%= messages.error %></span>
        <% } %>
		<label class="font-semibold text-xs" for="usernameField">Name</label>
		<input name="name" value="<%= messages.name %>" class="flex items-center h-12 px-4 w-64 bg-gray-200 mt-2 rounded focus:outline-none focus:ring-2" type="text">
        <br>
		<label class="font-semibold text-xs" for="usernameField">Username or Email</label>
		<input name="email" value="<%= messages.email %>" class="flex items-center h-12 px-4 w-64 bg-gray-200 mt-2 rounded focus:outline-none focus:ring-2" type="text">
		<label class="font-semibold text-xs mt-3" for="passwordField">Password</label>
		<input name="password" class="flex items-center h-12 px-4 w-64 bg-gray-200 mt-2 rounded focus:outline-none focus:ring-2"type="password">
		<button type="submit" class="btn-primary flex items-center justify-center h-12 px-6 w-64 mt-8 rounded font-semibold text-sm text-black-100">Register</button>
		<div class="flex mt-6 justify-center text-xs">
			<a class="text-black" href="/login">Already have an account?</a>
			<!-- <span class="mx-2 text-gray-300">/</span> -->
			<!-- <a class="text-blue-400 hover:text-blue-500" href="#">Sign Up</a> -->
		</div>
	</form>
	<!-- Component End  -->
</div>
</section>