<section class="login flex justify-center">
    <!-- component -->
<div class="flex flex-col items-center justify-center w-screen h-screen bg-gray-200 text-gray-700">
	<form action="/login" method="POST" class="flex flex-col bg-white rounded shadow-lg p-12 mt-12">
		<% if(messages.error) { %>
			<span class="text-red-500 text-sm"><%= messages.error %></span>
		<% } %>
		<label class="font-semibold text-xs" for="usernameField">Username or Email</label>
		<input name="email" class="flex items-center h-12 px-4 w-64 bg-gray-200 mt-2 rounded focus:outline-none focus:ring-2" type="text">
		<label class="font-semibold text-xs mt-3" for="passwordField">Password</label>
		<input name="password" class="flex items-center h-12 px-4 w-64 bg-gray-200 mt-2 rounded focus:outline-none focus:ring-2"type="password">
		<button class="btn-primary flex items-center justify-center h-12 px-6 w-64 mt-8 rounded font-semibold text-sm text-black-100" type="submit">Login</button>
		<div class="flex mt-6 justify-center text-xs">
			<a class="text-black" href="#">Forgot Password</a>
			<span class="mx-2 text-gray-300">/</span>
			<a class="text-black" href="/register">Sign Up</a>
		</div>
	</form>
	<!-- Component End  -->
</div>
</section>